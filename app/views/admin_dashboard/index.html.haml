%h1 Admin Dashboard

%table
  %thead
    %tr
      %th Question
      %th Approved
      %th Actions
  %tbody
    - @questions.each do |question|
      %tr
        %td= question.title
        %td= question.approved ? 'Yes' : 'No'
        %td
          - unless question.approved
            = link_to 'Approve', approve_question_path(question), method: :put
            \|
          = link_to 'Deny', question, method: :delete, data: { confirm: 'Are you sure?' }
