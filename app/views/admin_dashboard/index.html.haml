%h1 Admin Dashboard

%table
  %thead
    %tr
      %th Question
      %th Approved
      %th Actions
  %tbody
    - @questions.each do |question|
      %tr
        %td= question.title
        %td= question.approved ? 'Yes' : 'No'
        %td
          - unless question.approved
            = link_to 'Approve', approve_question_path(question), method: :put
            \|
          = link_to 'Deny', question, method: :delete, data: { confirm: 'Are you sure?' }

%h2 Answers
%table
  %thead
    %tr
      %th Answer
      %th Approved
      %th Actions
  %tbody
    - @answers.each do |answer|
      %tr
        %td= answer.body
        %td= answer.approved ? 'Yes' : 'No'
        %td
          - unless answer.approved
            = link_to 'Approve', approve_question_answer_path(answer.question, answer), method: :put
          = link_to 'Deny', question_answer_path(answer.question, answer), method: :delete, data: { confirm: 'Are you sure?' }