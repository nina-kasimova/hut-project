= simple_form_for [@elective, @question], html: {multipart: true} do |f|
  = f.error_notification
  = f.input :elective_id, as: :hidden, input_html: {value: @elective.id}

  = f.input :title, label: 'Title', required: true
  = f.input :body, label: 'Body', as: :text, required: true

  .actions
    = f.button :submit