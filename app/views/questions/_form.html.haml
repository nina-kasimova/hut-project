= form_with(model: [(@elective), (@question)], local: true) do |form|
  = form.hidden_field :elective_id, value: @elective.id
  - if question.errors.any?
    #error_explanation
      %h2= "#{pluralize(question.errors.count, "error")} prohibited this question from being saved:"
      %ul
        - question.errors.full_messages.each do |message|
          %li= message

  .field
    = form.label :title
    %br/
    = form.text_field :title

  .field
    = form.label :body
    %br/
    = form.text_area :body

  .actions
    = form.submit

